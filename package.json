{
  "name": "fastify-custom-healthcheck",
  "version": "1.0.0",
  "description": "Fastify plugin that allows to add custom health checks in your server",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "npm run lint && jest lib/**/*.js",
    "clean": "rimraf /coverage",
    "lint": "semistandard | snazzy"
  },
  "keywords": [
    "fastify",
    "plugin",
    "health",
    "healthchecks"
  ],
  "author": "Georgios Kampitakis",
  "license": "ISC",
  "files": [
    "lib/**/*",
    "!lib/tests/**/*"
  ],
  "semistandard": {
    "env": [
      "jest"
    ]
  },
  "dependencies": {
    "fastify-plugin": "^2.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "fastify": "^3.1.1",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.1.1",
    "semistandard": "^14.2.3",
    "snazzy": "^8.0.0"
  },
  "jest": {
    "verbose": true,
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.js$",
    "moduleFileExtensions": [
      "js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*/index.js",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "url": "https://github.com/gkampitakis/fastify-custom-healthcheck"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
